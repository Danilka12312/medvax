		    </div>
		    <ul class="home-info-block__main-list">
		      <% @expiring_vaccinations.each do |vaccination| %>
		        <li class="home-info-block__main-list__item">
		          <%= link_to vaccination.personal.fio, personal_path(vaccination.personal), class: 'home-info-block__main-list__link-person' %>
		          <%= link_to vaccination.vaccine.name, vaccine_path(vaccination.vaccine), class: 'home-info-block__main-list__link-vaccine' %>
		        </li>
