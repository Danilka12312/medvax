		      <div class="home-info-block__title">Вакцинация в 
		        <%= form_with url: root_path, method: :get, local: true, class: "month-selection-form" do %>
		          <div class="month-select-container">
		            <%= select_tag :month, options_for_select(next_three_months, @current_month.strftime("%Y-%m")), class: "form-control month-select", id: "month-select" %>
		          </div>
		        <% end %>
		      </div>
