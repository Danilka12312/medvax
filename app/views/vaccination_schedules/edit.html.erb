<style>
  .field {
    margin-bottom: 15px;
  }

  .field label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
  }

  .field input,
  .field select {
    width: 100%;
    padding: 8px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .actions input[type="submit"] {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
  }

  .actions input[type="submit"]:hover {
    background-color: #0056b3;
  }

  .form-container h2 {
    text-align: center;
    margin-bottom: 20px;
  }
</style>

<section class="body-header">
  <div class="body-header-container">
    <h2 class="body-header__title">Календарь</h2>
    <a href="#" class="body-header-user">
      <span class="body-header-user__fio">Профиль</span>
      <i class="fa-solid fa-chevron-down body-header__fa"></i>
    </a>
  </div>
</section>

<section class="calendar-edit">
  <div class="container calendar-container calendar-edit-container">
    <div class="personal-header">
      <h3 class="personal-header__title personal-show__head"><i class="fa-solid fa-chevron-left back-fa"></i> <%= link_to "Назад", "javascript:history.back()", class: 'personal-show__link' %>
    </div>
    <div class="form-edit-calendar">
       <%= form_with(model: @schedule, local: true) do |form| %>
        <div class="field">
          <%= form.label :vaccination_date, 'Дата' %>
          <%= form.date_field :vaccination_date %>
        </div>

        <div class="field">
          <%= form.label :vaccination_time, 'Время' %>
          <%= form.time_field :vaccination_time %>
        </div>

        <div class="field">
          <%= form.label :room_id, 'Кабинет' %>
          <%= form.collection_select :room_id, Room.all, :id, :name %>
        </div>

        <div class="actions">
          <%= form.submit 'Сохранить изменения' %>
        </div>
      <% end %>
    </div>
  </div>
</section>