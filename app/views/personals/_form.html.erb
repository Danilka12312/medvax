<%= form_with(model: personal, local: true, class: 'form-container') do |form| %>
  <% if personal.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(personal.errors.count, "error") %> не позволяют сохранить запись:</h2>
      <ul>
        <% personal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :fio, 'ФИО', class: 'form-label' %>
    <%= form.text_field :fio, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birthday, 'Дата рождения', class: 'form-label' %>
    <%= form.text_field :date_of_birthday, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :gender, 'Пол', class: 'form-label' %>
    <%= form.text_field :gender, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :email, 'Email', class: 'form-label' %>
    <%= form.text_field :email, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number, 'Номер телефона', class: 'form-label' %>
    <%= form.text_field :phone_number, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :departament, 'Отдел', class: 'form-label' %>
    <%= form.text_field :departament, class: 'form-input' %>
  </div>

  <div class="form-actions">
    <%= form.submit 'Сохранить', class: 'form-submit' %>
  </div>
<% end %>

<style>
  .form-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
  }

  .form-input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  .form-actions {
    text-align: center;
  }

  .form-submit {
    padding: 10px 20px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
  }

  .form-submit:hover {
    background-color: #0056b3;
  }

  .error-messages {
    margin-bottom: 20px;
    padding: 15px;
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
    border-radius: 4px;
  }

  .error-messages h2 {
    margin-top: 0;
  }

  .error-messages ul {
    padding-left: 20px;
  }
</style>
